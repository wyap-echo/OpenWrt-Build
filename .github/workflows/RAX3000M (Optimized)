# Description: Build OpenWrt using GitHub Actions
#

name: Build immortalwrt-mt798x-RAX3000M (Optimized)

on:
  workflow_dispatch:
#  push:
#    branches:
#      - main

env:
  REPO_URL: https://github.com/hanwckf/immortalwrt-mt798x.git
  REPO_BRANCH: openwrt-21.02
  FEEDS_CONF: feeds.conf.default
  CONFIG_FILE: configs/rax3000m.config
  DIY_P1_SH: diy-part1.sh
  DIY_P2_SH: diy-part2.sh
  UPLOAD_BIN_DIR: false
  UPLOAD_FIRMWARE: true
  TZ: Asia/Shanghai

jobs:
  build:
    # é”å®šè¿è¡Œç¯å¢ƒç‰ˆæœ¬ï¼Œå¢å¼ºç¨³å®šæ€§
    runs-on: ubuntu-22.04

    steps:
    - name: Checkout ğŸ›ï¸
      # é”å®š Action ç‰ˆæœ¬
      uses: actions/checkout@v4

    - name: Initialization environment ğŸ–¥ï¸
      env:
        DEBIAN_FRONTEND: noninteractive
      run: |
        sudo rm -rf /etc/apt/sources.list.d/* /usr/share/dotnet /usr/local/lib/android /opt/ghc
        sudo -E apt-get -qq update
        # ===============================================================
        # å·²æ›´æ–°ï¼šæ‰§è¡Œä»“åº“å†…çš„æœ¬åœ°è„šæœ¬ï¼Œè€Œä¸æ˜¯ä»ç½‘ç»œä¸‹è½½
        chmod +x scripts/init_env.sh
        sudo bash scripts/init_env.sh
        # ===============================================================
        sudo apt-get autoremove --purge -y && sudo apt-get clean
        sudo timedatectl set-timezone "$TZ"
        sudo mkdir -p /workdir && sudo chown $USER:$GROUPS /workdir

    - name: Clone source code ğŸ§‘â€ğŸ’»
      working-directory: /workdir
      run: |
        df -hT $PWD
        git clone $REPO_URL -b $REPO_BRANCH openwrt
        ln -sf /workdir/openwrt $GITHUB_WORKSPACE/openwrt

    # æ–°å¢ç¼“å­˜æ­¥éª¤ï¼Œå¤§å¹…æå‡åç»­æ„å»ºé€Ÿåº¦
    - name: Cache build dependencies  caching âš¡
      uses: actions/cache@v4
      with:
        path: |
          /workdir/openwrt/staging_dir
          /workdir/openwrt/dl
        # 'key' çš„è®¾è®¡å¾ˆé‡è¦ï¼Œå½“è¿™äº›æ–‡ä»¶å˜åŒ–æ—¶ï¼Œç¼“å­˜ä¼šå¤±æ•ˆå¹¶é‡æ–°ç”Ÿæˆ
        key: ${{ runner.os }}-openwrt-${{ env.REPO_BRANCH }}-${{ hashFiles('**/rax3000m.config', '**/feeds.conf.default') }}
        restore-keys: |
          ${{ runner.os }}-openwrt-${{ env.REPO_BRANCH }}-

    - name: Load custom feeds ğŸ“¦
      run: |
        [ -e $FEEDS_CONF ] && mv $FEEDS_CONF openwrt/feeds.conf.default
        chmod +x $DIY_P1_SH
        cd openwrt
        $GITHUB_WORKSPACE/$DIY_P1_SH

    - name: Update and Install feeds ğŸ”„
      run: |
        cd openwrt
        ./scripts/feeds update -a
        ./scripts/feeds install -a

    - name: Load custom configuration ğŸ§‘â€ğŸ«
      run: |
        [ -e files ] && mv files openwrt/files
        [ -e $CONFIG_FILE ] && mv $CONFIG_FILE openwrt/.config
        chmod +x $DIY_P2_SH
        cd openwrt
        $GITHUB_WORKSPACE/$DIY_P2_SH

    - name: Download package ğŸ“¥
      id: package
      run: |
        cd openwrt
        make defconfig
        # ä½¿ç”¨ $(nproc) è‡ªåŠ¨è·å–æ ¸å¿ƒæ•°
        make download -j$(nproc)
        find dl -size -1024c -exec ls -l {} \;
        find dl -size -1024c -exec rm -f {} \;

    - name: Compile the firmware âš™ï¸
      id: compile
      run: |
        cd openwrt
        echo -e "$(nproc) thread compile"
        make -j$(nproc) || make -j1 || make -j1 V=s
        echo "status=success" >> $GITHUB_OUTPUT
        grep '^CONFIG_TARGET.*DEVICE.*=y' .config | sed -r 's/.*DEVICE_(.*)=y/\1/' > DEVICE_NAME

    - name: Check space usage ğŸ’¾
      if: success() || failure()
      run: df -hT

    - name: Organize files and generate filename ğŸ—‚ï¸
      id: organize
      # ç®€åŒ– if æ¡ä»¶åˆ¤æ–­
      if: success() && env.UPLOAD_FIRMWARE == 'true'
      run: |
        cd openwrt/bin/targets/*/*
        rm -rf packages
        # å°†æ–‡ä»¶åç”Ÿæˆé€»è¾‘åˆå¹¶åˆ°æ­¤æ­¥éª¤
        VERSION="immortalwrt-21.02"
        TIMESTAMP=$(date '+%Y%m%d')
        FILENAME="RAX3000M_mediatek_mt7981_${VERSION}-${{ github.run_id }}-${TIMESTAMP}"
        
        echo "FIRMWARE_PATH=$PWD" >> $GITHUB_ENV
        echo "FIRMWARE_NAME=$FILENAME" >> $GITHUB_ENV
        echo "status=success" >> $GITHUB_OUTPUT

    - name: Upload firmware to Artifacts ğŸ“¦
      # é”å®š Action ç‰ˆæœ¬
      uses: actions/upload-artifact@v4
      if: steps.organize.outputs.status == 'success'
      with:
        name: ${{ env.FIRMWARE_NAME }}
        path: ${{ env.FIRMWARE_PATH }}

    - name: Delete workflow runs ğŸ—‘ï¸
      # é”å®š Action ç‰ˆæœ¬
      uses: GitRML/delete-workflow-runs@v1
      with:
        retain_days: 1
        keep_minimum_runs: 3
